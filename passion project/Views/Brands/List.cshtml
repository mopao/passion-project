@model IEnumerable<passion_project.Models.Brand>
@Styles.Render("~/Content/Brands/List.css")

@{
    ViewBag.Title = "list of  brands";
}

<h2>list of brands</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modeltem => item.name)
            </td>
            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.brandId }) |
                @Html.ActionLink("Details", "Details", new { id = item.brandId }) |
                @Html.ActionLink("Delete", "DeleteConfirm", new { id = item.brandId })
            </td>
        </tr>
    }

</table>
