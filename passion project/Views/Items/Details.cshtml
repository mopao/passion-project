@model passion_project.Models.Item

@{
    ViewBag.Title = "Details";
}
| @Html.ActionLink("Add stock","Create","Stocks", new { itemId=Model.itemId},null)

<h2>Item Details</h2>
<div>
    
    <hr />
    <div>
        <img src="~/Content/Items/@Model.image" alt="item image" width="300" height="300" />
    </div>
   <div class="row">
       <div class="col-sm-7">
           <dl class="dl-horizontal">

               <dt>
                   @Html.DisplayNameFor(model => model.brand)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.brand.name)
               </dd>

               <dt>
                   @Html.DisplayNameFor(model => model.name)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.name)
               </dd>

               <dt>
                   @Html.DisplayNameFor(model => model.code)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.code)
               </dd>

               <dt>
                   @Html.DisplayNameFor(model => model.color)
               </dt>

               <dd>
                   <input type="color" value="@Model.color" readonly />
               </dd>

               <dt>
                   @Html.DisplayNameFor(model => model.gender)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.gender)
               </dd>

               <dt>
                   @Html.DisplayNameFor(model => model.price)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.price)
               </dd>

               <dt>
                   @Html.DisplayNameFor(model => model.composition)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.composition)
               </dd>

               <dt>
                   @Html.DisplayNameFor(model => model.details)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.details)
               </dd>


               <dt>
                   @Html.DisplayNameFor(model => model.createdDate)
               </dt>

               <dd>
                   @Html.DisplayFor(model => model.createdDate)
               </dd>

           </dl>
       </div>
       <div class="col-sm-5">
          <table>
              <caption>Available Stock(s)</caption>
              <thead>
                  <tr>
                      <th>Size (US)</th>
                      <th>Quantity</th>
                  </tr>
              </thead>
              <tbody>
                  @foreach(var stock in Model.stocks)
                  {
                      <tr>
                          <td>@stock.size </td><td>@stock.quantity</td>
                      </tr>
                  }
              </tbody>
          </table>
       </div>
   </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.itemId }) |
    @Html.ActionLink("Back to The List of Items", "List")
</p>
