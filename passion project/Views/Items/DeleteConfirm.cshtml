@model passion_project.Models.Item
@Styles.Render("~/Content/Items/Delete.css")

@{
    ViewBag.Title = "DeleteConfirm";
}
@Html.ActionLink("Back to The List of Items", "List", null, new { id = "back-link" })
<h2>Confirm your action</h2>



<p id="deleteMsg">Are you sure you want to delete this item?</p>
<div>

    <div class="div-img">
        <img src="~/Content/Images/@Model.image" alt="item image" class="img-rounded"/>

    </div>

    @using (Html.BeginForm("Delete", "Items", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.itemId, new { Name = "id" })

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />

        </div>
    }
</div>
